<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dropdown Menu"
        android:textAlignment="center"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_marginBottom="100dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="@string/option_1"
        app:icon="@drawable/ic_arrow_drop_down"
        app:iconGravity="end"
        app:iconSize="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="@string/item_1"
        app:icon="@drawable/ic_arrow_drop_down"
        app:iconGravity="end"
        app:iconSize="24dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option_1"
        app:closeIcon="@drawable/ic_filter"
        app:closeIconEnabled="true"
        app:chipStrokeWidth="0dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_1"
        app:closeIcon="@drawable/ic_filter"
        app:closeIconEnabled="true"
        app:chipStrokeWidth="0dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_one"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:hintEnabled="false"
        android:layout_marginTop="20dp">

        <AutoCompleteTextView
            android:id="@+id/auto_text_view_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>